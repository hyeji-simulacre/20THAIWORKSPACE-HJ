# PKM System Environment Variables
# .env.template을 복사해서 .env 파일로 만들고 실제 값들을 입력하세요
#
# 사용법:
# cp .env.template .env
# nano .env  # 실제 값 입력

# ==================================================
# AI APIs
# ==================================================

# Anthropic Claude API
# 발급: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# OpenAI API (DALL-E 3, GPT-4 등)
# 발급: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google API`
# 발급: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_OCR_API_KEY=

# ==================================================
# Other Services
# ==================================================

# YouTube Data API
# 발급: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=

# ==================================================
# Notion API
# ==================================================

# 발급: https://www.notion.so/my-integrations
NOTION_TOKEN=
NOTION_UPLOAD_DEFAULT_PAGE_ID=
NOTION_DOWNLOAD_DEFAULT_PAGE_ID=

# ==================================================
# Notion 폴더 연동(단방향)
# - lv1: 업로드(로컬 → Notion) - AI가 사용자에게 폴더 질문
# - lv2: 다운로드(Notion → 로컬) - 프로젝트별 저장
# ==================================================
# 다운로드 기본 폴더 (AI가 프로젝트별 하위 폴더를 질문합니다)
# 예: 10-working/GPTers-20기/notion/
NOTION_DOWNLOAD_DIR=10-working

# ==================================================
# Google Drive 폴더 연동(단방향)
# - lv1: 업로드(로컬 → GDrive)
# - lv2: 다운로드(GDrive → 로컬) - 프로젝트별 저장
# ==================================================

# 인증 파일 경로 (기본값: 프로젝트 루트)
GDRIVE_CREDENTIALS_PATH=./credentials.json
GDRIVE_TOKEN_PATH=./token.json
# 대상 구글드라이브 폴더 ID (선택 - 비우면 루트)
GDRIVE_UPLOAD_DEFAULT_FOLDER_ID=
GDRIVE_DOWNLOAD_DEFAULT_FOLDER_ID=
# 다운로드 기본 폴더 (AI가 프로젝트별 하위 폴더를 질문합니다)
# 예: 10-working/GPTers-20기/gdrive/
GDRIVE_DOWNLOAD_DIR=10-working